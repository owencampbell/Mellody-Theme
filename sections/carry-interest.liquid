  {
    "name": "Carry Interest",
    "settings": [
      {
        "type":"text",
        "id":"title",
        "label":"Title"
      },
       {
        "type":"text",
        "id":"question",
        "label":"Question Text"
      },
       {
        "type":"text",
        "id":"button_text",
        "label":"Button text"
      },
      {
        "type":"url",
        "id":"btn_url",
        "label":"Button Url"
      }
    ],
    "presets":[
      {
        "name":"Carry Interest"
      }
    ]
  }
{% endschema %}

