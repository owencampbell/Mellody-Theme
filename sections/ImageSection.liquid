    <section>
        <div class="imagesSection">
            <div class="mainflex">
               {% for block in section.blocks %}
                <img src="{{ block.settings.img | img_url:'master' }}" class="items">
              {% endfor %}
            </div>
        </div>

        <div class="secondContent">
            <div class="qstn">
                <p>
                   {{ section.settings.qstn1 }}
                </p>
            </div>
            <div class="ans">
                <p>
                 {{ section.settings.ans1 }}

                </p>

            </div>
         
        </div>

    </section>


{% schema %}
  {
    "name": "ImageSection",
    "settings": [
        {
          "type": "text",
          "id": "qstn1",
          "label": "Text"
        },
  {
          "type": "textarea",
          "id": "ans1",
          "label": "Ans"
        }
    ],
    "blocks":[

          {
            "type":"ImageSection",
             "name":"ImageSection",
            "limit": 5,

          "settings":[ 
                           { 
                              "type":"image_picker",
                               "id":"img",
                               "label":"Image"
                             }
                     ]
           }

       ],
     "presets":[

        { 
          "name":"ImageSection",
          "category":"ImageSection"
     }

             ]
  }
{% endschema %}

